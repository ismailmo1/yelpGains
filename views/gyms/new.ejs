<% layout('layout/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New gym</h1>
        <div class="col-md-6 offset-md-3">

            <form action="/gyms" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="gym[title]" id="title" required>
                    <div class="valid-feedback">
                        Nice!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="gym[location]" id="location" required>
                    <div class="valid-feedback">
                        Nice!
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" name="images" id="images" multiple>
                    <label class="input-group-text" for="images">Add Images</label>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Gym Monthly Fee</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">Â£</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Price"
                            aria-describedby="price-label" name='gym[price]' required>
                        <div class="valid-feedback">
                            Nice!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="squatRacks">Squat/Power Racks</label>
                    <input class="form-control" type="text" name="gym[squatRacks]" id="squatRacks" required>
                    <div class="valid-feedback">
                        Nice!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="benchRacks">benchRacks</label>
                    <input class="form-control" type="text" name="gym[benchRacks]" id="benchRacks" required>
                    <div class="valid-feedback">
                        Nice!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="dlPlatforms">dlPlatforms</label>
                    <input class="form-control" type="text" name="gym[dlPlatforms]" id="dlPlatforms" required>
                    <div class="valid-feedback">
                        Nice!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="dbBenches">dbBenches</label>
                    <input class="form-control" type="text" name="gym[dbBenches]" id="dbBenches" required>
                    <div class="valid-feedback">
                        Nice!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="cables">cables</label>
                    <input class="form-control" type="text" name="gym[cables]" id="cables" required>
                    <div class="valid-feedback">
                        Nice!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="gym[description]" id="description"
                        required></textarea>
                    <div class="valid-feedback">
                        Nice!
                    </div>
                </div>
                <div class="mb-3">
                    <button class=" btn btn-success">Add New gym</button>
                </div>
            </form>
            <a href="/gyms">Back to All gyms</a>
        </div>
    </div>
<% layout('layout/boilerplate') %>
    <div id="clusterMap"></div>

    <h1>All gyms</h1>
    <div>
        <a class="btn btn-success mb-3" href="/gyms/new">+New gym</a>
    </div>
    <% for (let gym of gyms){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid campImg" src=<%=gym.images[0] ? gym.images[0].url : "" %> >
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= gym.title %>
                        </h5>
                        <p class="class-text">
                            <%= gym.description %>
                        </p>
                        <p class="class-text"> <small class="text-muted">
                                <%= gym.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="gyms/<%= gym._id%>">View <%= gym.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapBoxToken='<%-process.env.MAPBOX_TOKEN%>';
                const gyms={ features:<%-JSON.stringify(gyms)%> };
            </script>
            <script src="/scripts/clusterMap.js"></script>